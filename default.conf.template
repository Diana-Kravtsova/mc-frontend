server {
    listen       80;
    listen  [::]:80;
    server_name  localhost;

    location / {
        root   /usr/share/nginx/html;
        try_files $uri $uri/ /index.html;
    }
}

server {
    listen       8080;
    server_name  localhost;

    location  ~ ^/(.*)$ {
        proxy_pass   ${MC_BACKEND_BASEURL}/$1;
    }
}

